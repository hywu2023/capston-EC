<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="110dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="홍길동님, 안녕하세요!"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="asdf123@naver.com"
                android:layout_marginLeft="30dp"
                android:textColor="@color/gray"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="25dp"
                android:background="@color/material_dynamic_neutral95" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp">


                <TextView
                    android:id="@+id/drugIng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="복용 중인 약"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:drawableLeft="@drawable/baseline_medication_24"
                    android:drawablePadding="10dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/material_dynamic_neutral95" />

                <TextView
                    android:id="@+id/drugEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    android:text="복용 했던 약"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:drawableLeft="@drawable/baseline_playlist_add_check_24"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/material_dynamic_neutral95"/>

                <TextView
                    android:id="@+id/favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:text="찜한 약국"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:drawableLeft="@drawable/baseline_favorite_24"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/material_dynamic_neutral95" />

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    android:text="설정"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:drawableLeft="@drawable/baseline_settings_24"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/material_dynamic_neutral95" />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>